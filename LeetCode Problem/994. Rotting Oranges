class Solution:
    def orangesRotting(self, grid: List[List[int]]) -> int:
        
        q=deque()
        num_fresh=0
        n=len(grid)
        m=len(grid[0])
        for i in range(n):
            for j in range(m):
                if grid[i][j]==1:
                    num_fresh+=1
                elif grid[i][j]==2:
                    q.append((i,j))
        if num_fresh==0:
            return 0
        mn=-1
        while q:
            q_size = len(q)
            mn+=1
            for i in range(q_size):
                i,j = q.popleft()
                for r,c in [(i,j+1),(i+1,j),(i-1,j),(i,j-1)]:
                    if 0<=r<n and 0<=c<m and grid[r][c]==1:
                        grid[r][c]=2
                        num_fresh-=1
                        q.append((r,c))
        if num_fresh==0:
            return mn
        else:
            return -1

        
        
