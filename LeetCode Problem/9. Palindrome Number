class Solution:
    def isPalindrome(self, x: int) -> bool:
    
        sum=0
        n=x
        if x<0:
            return False
        
        while x>0:
            r = x%10
            sum=sum*10+r
            x=x//10
        
        if sum==n:
            return True
        else:
            return False
        
